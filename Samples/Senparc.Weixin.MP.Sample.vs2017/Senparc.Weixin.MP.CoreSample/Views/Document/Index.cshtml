@{
    ViewBag.Title = "文档下载";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderContent
{
    <style>
        #downloadArea {
            padding: 50px;
        }

            #downloadArea p {
                line-height: 120%;
            }

            #downloadArea h2 {
                font-size: 200%;
                font-weight: bold;
                text-align: center;
                margin-bottom: 20px;
            }

            #downloadArea img {
                width: 200px;
                margin: 20px;
            }

            #downloadArea .versionSelector-title {
                font-weight: bold;
                margin: 10px;
            }

            #downloadArea .qrcode {
                text-align: center;
                font-size: 120%;
            }

                #downloadArea .qrcode table thead td {
                    font-weight: bold;
                }

                #downloadArea .qrcode table tbody {
                    text-align: left;
                }


                #downloadArea .qrcode table {
                    margin: 0px auto;
                }

                    #downloadArea .qrcode table td {
                        vertical-align: top;
                        padding: 5px;
                    }

        #downloadTip {
            text-align: center;
            display: none;
            padding: 20px;
            background: rgb(255, 245, 210);
        }

        .bookNote {
            text-align: center;
        }

        #downloadArea .bookNote p {
            line-height: 150%;
            font-size: 1.4em;
        }

        #downloadArea .bookNote img {
            width: 400px;
        }

        .bookNote a {
            font-size: 150%;
            padding: 15px 30px;
        }

        .clear {
            clear: both;
            overflow: hidden;
        }

        .line {
            margin-top: 40px;
            margin-bottom: 40px;
        }
    </style>
    <script>
        var guid = '@ViewData["Guid"]';
        var interval;
        $(function() {

            $('input[name=version]').eq(0).attr('checked', true);

            interval = setInterval(function() {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("CheckDownload")',
                        data: {
                            guid: guid,
                            version: $("input[name='version']:checked").val(),
                            versionWeb: $("input[name='versionWeb']:checked").val()
                        },
                        dataType: "json",
                        success: function(json) {
                            if (json.success) {
                                //开始下载
                                clearInterval(interval);
                                $('#downloadTip').show();
                                $('#versionSelector').hide();
                                location.href = $('#downloadTip a').attr('href');
                            }
                        }
                    });
                },
                5000);
        });
    </script>
}
<div class="wrapper">
    <div id="downloadArea">
