.service-btn{
  font-size: 15px;
  line-height: 70rpx;
  font-family: PingFang SC;
  width: 240rpx;
  height: 72rpx;
  background-color: #ff8f00;
  box-shadow: 1rpx 1rpx 8rpx 0rpx rgba(22, 22, 22, 0.35);
  border-radius: 22rpx;
  color: #fff;
}